{
  "name": "agility-backend",
  "version": "4.1.0",
  "adonis-version": "4.1.0",
  "description": "Sistema de gerenciamento de tarefas no modelo kanban",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "start": "node server.js",
    "test": "node ace test",
    "commit:cz": "exec < /dev/tty && git cz --hook || true"
  },
  "lint-staged": {
    "*.js": ["eslint --fix ."]
  },
  "keywords": [
    "adonisjs",
    "adonis-app",
    "task-board",
    "kanban-system"
  ],
  "author": {
    "name": "Wesley Oliveira",
    "email": "wesleyoliveiradeveloper@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@adonisjs/ace": "^5.0.8",
    "@adonisjs/auth": "^3.0.7",
    "@adonisjs/bodyparser": "~2.0.9",
    "@adonisjs/cors": "^1.0.7",
    "@adonisjs/fold": "^4.0.9",
    "@adonisjs/framework": "^5.0.9",
    "@adonisjs/ignitor": "^2.0.8",
    "@adonisjs/lucid": "^6.1.3"
  },
  "devDependencies": {
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4"
  },
  "autoload": {
    "App": "./app"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
